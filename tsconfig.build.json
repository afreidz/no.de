{
  "exclude": [
    "node_modules",
    "build"
  ],
  "compilerOptions": {
    "lib": ["ES2020"],
    "target": "ES2020",
    "module": "commonjs",
    "strict": false,
    "outDir": "build",
    "sourceMap": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "noImplicitUseStrict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@no.de/*": ["./*"]
    }
  }
}
